                  <MenuItem fx:id="BookFlightsMenuButton" mnemonicParsing="false" onAction="#goToFlights" text="Book Flights" />
                  <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#logout" text="Logout" />
